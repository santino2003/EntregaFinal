<div>
  <h1>Productos</h1>
  {{#each docs}}
    <p>name: {{this.title}}</p>
    <p>price {{this.price}}</p>
    <a href="#" onclick="document.getElementById('addToCartForm{{this._id}}').submit()">AddToCart</a>
    <form id="addToCartForm{{this._id}}" action="/api/carts/65df6968de6283e26a8c3491/product/{{this._id}}" method="POST" style="display: none;"></form>
    <a href="#" onclick="document.getElementById('info{{this._id}}').submit()">Detalles</a>
    <form id="info{{this._id}}" action="/product/{{this._id}}" method="GET" style="display: none;"></form>
    <p>-----------------</p>
  {{/each}}

  <div>
    <p>Pagina actual {{page}}</p>
  </div>

  {{#if hasPrevPage}}
    <p>Pagina previa {{prevPage}}</p>
    <a href="/products?page={{prevPage}}"><button
      >Anterior</button></a>
  {{/if}}

  {{#if hasNextPage}}
    <p>Pagina siguiente {{nextPage}}</p>
    <a href="/products?page={{nextPage}}"><button
      >Siguiente</button></a>
  {{/if}}
</div>